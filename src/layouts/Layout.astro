---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
  </head>
  <!-- TODO: remove this once the single asset redirection proxy comes out -->
  <link rel="stylesheet" href="https://latest.datasette.io/-/static/app.css?cead5a">

  <body>
    <slot />
    <style>
      body {
        margin: 0;
        padding: 0;
        font-family: "Helvetica Neue", sans-serif;
        font-size: 1rem;
        font-weight: 400;
        line-height: 1.5;
        color: #111a35;
        text-align: left;
        background-color: #f8fafb;
      }
    </style>
  </body>
</html>
